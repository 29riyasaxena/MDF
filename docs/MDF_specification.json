{
    "version": "ModECI MDF v0.1",
    "comment": "**Note: specification in development! Subject to change without (much) notice. See [here](https://github.com/ModECI/MDF/issues?q=is%3Aissue+is%3Aopen+label%3Aspecification) for ongoing discussions.**\n\n",
    "specification": {
        "Model": {
            "definition": "The top level Model containing a number of _Graph_s",
            "allowed_parameters": {
                "format": {
                    "type": "str",
                    "description": "Information on the version of MDF used in this file"
                },
                "generating_application": {
                    "type": "str",
                    "description": "Information on what application generated/saved this file"
                },
                "id": {
                    "type": "str",
                    "description": "Unique ID of element"
                },
                "notes": {
                    "type": "str",
                    "description": "Human readable notes"
                }
            },
            "allowed_children": {
                "graphs": {
                    "type": "Graph",
                    "description": "The list of _Graph_s in this Model"
                }
            }
        },
        "Graph": {
            "allowed_parameters": {
                "parameters": {
                    "type": "dict",
                    "description": "Dict of global parameters for the Graph"
                },
                "id": {
                    "type": "str",
                    "description": "Unique ID of element"
                },
                "notes": {
                    "type": "str",
                    "description": "Human readable notes"
                }
            },
            "allowed_children": {
                "nodes": {
                    "type": "Node",
                    "description": "The _Node_s present in the Graph"
                },
                "edges": {
                    "type": "Edge",
                    "description": "The _Edge_s between _Node_s in the Graph"
                }
            }
        },
        "Node": {
            "allowed_parameters": {
                "parameters": {
                    "type": "dict",
                    "description": "Dict of parameters for the Node"
                },
                "id": {
                    "type": "str",
                    "description": "Unique ID of element"
                },
                "notes": {
                    "type": "str",
                    "description": "Human readable notes"
                }
            },
            "allowed_children": {
                "input_ports": {
                    "type": "InputPort",
                    "description": "The _InputPort_s into the Node"
                },
                "functions": {
                    "type": "Function",
                    "description": "The _Function_s for the Node"
                },
                "output_ports": {
                    "type": "OutputPort",
                    "description": "The _OutputPort_s into the Node"
                }
            }
        },
        "InputPort": {
            "allowed_parameters": {
                "shape": {
                    "type": "str",
                    "description": "The shape of the variable (limited support so far...)"
                },
                "id": {
                    "type": "str",
                    "description": "Unique ID of element"
                },
                "notes": {
                    "type": "str",
                    "description": "Human readable notes"
                }
            }
        },
        "Function": {
            "allowed_parameters": {
                "function": {
                    "type": "str",
                    "description": "Which of the in-build MDF functions (linear etc.) this uses"
                },
                "args": {
                    "type": "dict",
                    "description": "Dictionary of arguments for the Function"
                },
                "id": {
                    "type": "str",
                    "description": "Unique ID of element"
                },
                "notes": {
                    "type": "str",
                    "description": "Human readable notes"
                }
            }
        },
        "OutputPort": {
            "allowed_parameters": {
                "value": {
                    "type": "str",
                    "description": "The value of the OutputPort in terms of the _InputPort_ and _Function_ values"
                },
                "id": {
                    "type": "str",
                    "description": "Unique ID of element"
                },
                "notes": {
                    "type": "str",
                    "description": "Human readable notes"
                }
            }
        },
        "Edge": {
            "allowed_parameters": {
                "sender": {
                    "type": "str",
                    "description": "The _Node_ which is the source of the Edge"
                },
                "receiver": {
                    "type": "str",
                    "description": "The _Node_ which is the target of the Edge"
                },
                "sender_port": {
                    "type": "str",
                    "description": "The _OutputPort_ on the sender _Node_"
                },
                "receiver_port": {
                    "type": "str",
                    "description": "The _InputPort_ on the sender _Node_"
                },
                "id": {
                    "type": "str",
                    "description": "Unique ID of element"
                },
                "notes": {
                    "type": "str",
                    "description": "Human readable notes"
                }
            }
        }
    }
}